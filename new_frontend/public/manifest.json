{
  "manifest_version": 3,
  "name": "AI Job Assistant",
  "version": "1.0",
  "description": "An AI-powered assistant to help with job applications",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["grab.png"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}



